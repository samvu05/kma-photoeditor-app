<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:text="E D I T O R"
        android:textColor="@color/text_dark_color"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/iv_home"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></TextView>

    <ImageView
        android:id="@+id/iv_home"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:padding="16dp"
        android:src="@drawable/home_pictures"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"
        />

    <ImageView
        android:id="@+id/btn_cap_home"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="32dp"
        android:src="@drawable/mate_icon_camera"
        app:layout_constraintRight_toLeftOf="@id/guideline1"
        app:layout_constraintTop_toBottomOf="@id/iv_home"></ImageView>
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_cap_home"
        app:layout_constraintRight_toLeftOf="@id/guideline1"
        android:text="Camera"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_marginRight="10dp"
        android:textColor="@color/text_dark_color"></TextView>

    <ImageView
        android:id="@+id/btn_lib_home"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="64dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toRightOf="@id/guideline1"
        android:src="@drawable/mate_icon_gallery"
        app:layout_constraintTop_toBottomOf="@id/iv_home"></ImageView>

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_lib_home"
        app:layout_constraintLeft_toRightOf="@id/guideline1"
        android:text="Gallery"
        android:textSize="13sp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_dark_color"></TextView>

</androidx.constraintlayout.widget.ConstraintLayout>